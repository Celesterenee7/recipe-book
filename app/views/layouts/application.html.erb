<!DOCTYPE html>
<html>
<head>
  <title>RecipeBook</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="/recipes.css">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="jumbotron">
    <h1>EPICODIURUS BOOK OF RECIPES</h1>
    <p><%= link_to "Recipes", recipes_path %> | <%= link_to "Tags", food_tags_path %>
  </div>
  <div class="container">
    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </div>
</body>
</html>
