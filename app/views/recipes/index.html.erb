<div class="row">
  <div class="col-md-6">
<h1>Top-Rated Recipes</h1>
<% if @recipes.any? %>
<ul>
  <% @recipes.top_rated.each do |recipe| %>
  <li><%= link_to recipe.name, recipe_path(recipe) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no recipes yet.</p>
<% end %>
</div>
<div class="col-md-6">
<h1>Search for a recipe:</h1>
<%= form_tag(recipes_path, method: :get) do %>
  <%= text_field_tag :search, '', placeholder: 'Enter search term...' %>
  <%= submit_tag ("search"), :class => 'btn btn-info' %>
<% end %>

  <% if (@recipe_search != nil) && (@recipe_search.length != Recipe.all.length)  %>
    <ul>
      <% @recipe_search.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
      <% end %>
  <% end %>
  </div>
  </div>

<div class="row">
<div class="col-md-12">
  <h4 class="butt"><%= link_to 'New Recipe', new_recipe_path %></h4>
</div>
</div>
